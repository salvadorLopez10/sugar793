{{#if this.loadView}}
<style>
    .container {
        overflow-y:auto;
        display:block;
        width: 100%;
    }

    .cuentas {
        display:table;
        width: 90%;
    }

    .cuentasContainer {
        margin-top: 2%;
        overflow-y:auto;
        height: 400 px;
    }

    #containerHeader {
        font-size: 18px;
        margin-top: 2%;
        margin-left: 1%;
        line-height: 10px;
    }

    #successful {
        margin-top: 10%;
        font-size: 25px;
        color: #33800d;
    }
</style>


<div class="container" >
    <h1 id="containerHeader" align="left">Reasignacion de promotores</h1>
    <hr margin: 5px>
    <table align="left"  width=100%>
        <tr>
            <td >
                <th>Producto:</th>
            </td>
            <td colspan="2" style="padding-top: 1%;">
                <select id="Productos" style="width: 100%;">
                    {{{productos_list}}}
                 </select>
            </td>
            <td />
            <td>
                <th>Promotor Actual: </th>
            </td>
            <td colspan="2">
                {{#each meta.panels}}
                    {{#each fields}}
                            {{field ../../this}}
                    {{/each}}
                {{/each}}
            </td>
            <td></td>
            <td>
                 <th> Cliente / Prospecto: </th>
            </td>
            <td colspan="2">
                <input id="filtroCliente" type="text" value="">
            </td>
            <td><input type="button" value="Buscar" id="btn_Cuentas" class="btn btn-primary" /></td>
        </tr>
        <tr>
            <td colspan="12"><span id='processing' style="display: none"><img width='30' height='5' src='custom/Levementum/images/icon_processing.gif'></span></td>
        </tr>
    </table>
    <br>
        <div style="display: none" id="successful">
            <p>Los Clientes fueron reasignados</p>
        </div>
    <br>
    <div class="cuentasContainer">
    <table class="cuentas" align="center" border="1">
    {{#if cuentas}}
        <tr>
            <th width="10%"><input type="button" value="Seleccionar Todo" id="btn_STodo" class="btn btn-primary" /></th>
            <th width="10%">TIPO</th>
            <th width="60%">NOMBRE</th>
            <th width="10%">ID</th>
            <th width="10%">RFC</th>
        </tr>
        {{#each cuentas}}
            <tr class='single'>
                <td>
                    <span sfuuid='880' class='list'>
                          <div class='ellipsis_inline' data-placement='bottom'>
                            <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'><input type="checkbox" name="selected" value="{{id}}" class="selected" /></span>
                          </div>
                    </span>
                </td>

                <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{tipo_registro_c}}</span>
                        </div>
                    </span>
                </td>



                <td>
                    <span sfuuid='880' class='list'>
                          <div class='ellipsis_inline' data-placement='bottom'>
                              <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{name}}</span>
                          </div>
                    </span>
                </td>

                <td>
                    <span sfuuid='880' class='list'>
                        <div class='ellipsis_inline' data-placement='bottom'>
                            <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{idcliente_c}}</span>
                        </div>
                    </span>
                </td>

                <td>
                    <span sfuuid='880' class='list'>
                          <div class='ellipsis_inline' data-placement='bottom'>
                              <span style='font-family: Helvetica, Arial, sans-serif; font-size: 12px;'>{{rfc_c}}</span>
                          </div>
                    </span>
                </td>
            </tr>
        {{/each}}
            <tr>
                <td colspan="4"></td>
                <td>
                    <div class="btn-group">
                        <a class="btn fa icon-caret-left" id="previous_offset"></a>
                        <a class="btn disabled" id="offset_value" from_set="" to_set="" total="{{../this.total}}" ></a>
                        <a class="btn fa icon-caret-right" id="next_offset"></a>
                    </div>
                </td>
            </tr>

    </table>
    </div>
    <div><p></p></div>
    <table align="left">
        <tr>
            <td>
                <th width="30%">
                    Reasignar a:
                </th>
            </td>
            {{#each meta.panelsTo}}
                {{#each fields}}
                    <td>
                        {{field ../../this}}
                    </td>
                {{/each}}
            {{/each}}
            <td><input type="button" value="Reasignar" id="btn_ReAsignar" class="btn btn-success" /></td>
        </tr>
    </table>
    {{/if}}
    <textarea style="display: none" id="crossSeleccionados" value=""></textarea>
</div>
{{/if}}