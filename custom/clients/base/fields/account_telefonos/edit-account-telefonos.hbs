<div class="control-group telefonos">
    {{{log this}}}
    <table class="dashlet" style="min-height: 0px;" cellspacing="1" cellpadding="5">
        <tr>
            <td valign="top" colspan="5">
                <div class="record-label">
                    {{{tipoTelLabel}}}
                </div>
                <select class="existingTipotelefono" data-field="tipotelefono" style="font-size: 15px;font-weight: 500;width:33%">
                    {{{tipotelefono}}}
                </select>
            </td>
        </tr>
        <tr>
            <td valign="top">
                <div class="record-label">
                    Lada
                </div>
                <select class="existingPais" data-field="pais" style="font-size: 15px;font-weight: 500;width:80%" placeholder="Lada">
                    {{{pais}}}
                </select>
            </td>
            <td valign="top">
                <div class="record-label">
                    {{{telefonoLabel}}}
                </div>
                <input type="text" class="existingTelephono" maxlength="10"
                       placeholder="Telephono" value="{{telefono}}" data-field="telefono" style="width: 92%;margin: 0px;">
            </td>
            <td valign="top" style="width:100px;">
                <div class="record-label">
                    {{{extensionLabel}}}
                </div>
                <input type="text" class="existingExtension" maxlength="6"
                       placeholder="Extension" value="{{extension}}" data-field="extension" style="width: 85%;margin: 0px;">
            </td>
            <td valign="top">
                <div class="record-label">
                    {{{estatusLabel}}}
                </div>
                <select class="existingEstatus" data-field="estatus" style="font-size: 15px;font-weight: 500;width:92%">
                    {{{estatus}}}
                </select>
            </td>
            <td valign="bottom">
                <div class="btn-toolbar prevent-mousedown">
                    <div class="btn-group" data-toggle="buttons-checkbox">
                        <button type="button" class="{{#if principal}}active {{/if}}is_primary btn btn-edit" data-emailproperty="principal" rel="tooltip" title="{{str "LBL_EMAIL_PRIMARY"}}">
                            <i class="fa fa-star"></i></button>
                    </div>
                    <div class="btn-group prevent-mousedown">
                        <a href="javascript:void(0)" class="btn removeEmail" rel="tooltip" title="{{str "LBL_REMOVE"}}"><i class="fa fa-minus"></i></a>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>
