<div class="control-group direccion">
    <table class="dashlet" cellspacing="1" cellpadding="5">
        <tr>
            <td valign="top">
                <div class="record-label" >
                    Tipo
                </div>
                <select class="existingTipodedireccion" data-field="tipodedireccion" placeholder="tipo" style="font-size: 15px;font-weight: 500;">
                    {{{tipodedireccion}}}
                </select>
            </td>
            <td valign="top">
                <div class="record-label" >
                    Indicador
                </div>
                <select class="existingIndicador" data-field="indicador" placeholder="indicador" style="font-size: 15px;font-weight: 500;">
                    {{{indicador_html}}}
                </select>
            </td>
            <td></td>
        </tr>
        <tr>
            <td valign="top">
                <div class="record-label" >
                    Pais
                </div>
                <select class="existingPais" data-field="pais" placeholder="pais" style="font-size: 15px;font-weight: 500;">
                    {{{pais}}}
                </select>
            </td>
            <td valign="top">
                <div class="record-label" >
                    Estado
                </div>
                <select class="existingEstado" data-field="estado" placeholder="estado" style="font-size: 15px;font-weight: 500;">
                    {{{estado_html}}}
                </select>
            </td>
            <td valign="top">
                <div class="record-label" >
                    Municipio
                </div>
                <select class="existingMunicipio" data-field="municipio" placeholder="municipio" style="font-size: 15px;font-weight: 500;">
                    {{{municipio_html}}}
                </select>
            </td>
        </tr>
        <tr>
            <td valign="top">
                <div class="record-label" >
                    Codigo Postal
                </div>
                <select class="existingPostal" data-field="codigopostal" placeholder="Codigo Postal" style="font-size: 15px;font-weight: 500;">
                    {{{postal_html}}}
                </select>
                <!--<input type="text" class="existingPostal" placeholder="Codigo Postal" value="{{postal_html}}" data-field="codigopostal" data-name="codigopostal" style="width: 94%;margin: 0px;">-->
                <input type="hidden" class="existingPostalId" placeholder="postal" value="{{postal}}" data-field="postal" style="width: 57%;margin: 0px;">
            </td>
            <td valign="top">
                <div class="record-label" >
                    Ciudad
                </div>
                <select class="existingCiudad" data-field="ciudad" placeholder="ciudad" style="font-size: 15px;font-weight: 500;">
                    {{{ciudad_html}}}
                </select>
            </td>
            <td valign="top">
                <div class="record-label" >
                    Colonia
                </div>
                <select class="existingColonia" data-field="colonia" placeholder="colonia" style="font-size: 15px;font-weight: 500;">
                    {{{colonia_html}}}
                </select>
                <input type="hidden" class="existingColoniaId" placeholder="postal" value="{{colonia_id}}" data-field="colonia_id">
            </td>
        </tr>
        <tr>
            <td colspan="2" valign="top">
                <div class="record-label" >
                    Calle
                </div>
                <input type="text" class="existingCalle" placeholder="Calle" value="{{calle}}" data-field="calle" style="width: 95%;margin: 0px;"/>
            </td>
            <td valign="top">
                <div class="record-label" >
                    Numero Exterior y Numero Interior
                </div>
                <input type="text" class="existingNumExt" placeholder="numExt" value="{{numext}}" data-field="numext" style="width: 25%;margin: 0px;">
                <input type="text" class="existingNumInt" placeholder="numInt" value="{{numint}}" data-field="numint" style="width: 25%;margin: 0px;">

                <div class="btn-toolbar prevent-mousedown">
                    <div class="btn-group" data-toggle="buttons-checkbox">
                        <button type="button" class="{{#if principal}}active {{/if}}is_primary btn btn-edit" data-direccionproperty="principal" rel="tooltip" title="{{str "LBL_EMAIL_PRIMARY"}}">
                            <i class="fa fa-star"></i></button>
                    </div>
                    <div class="btn-group" data-toggle="buttons-checkbox">
                        <button type="button" class="{{#if inactivo}}active {{/if}}is_primary btn btn-edit" data-direccionproperty="inactivo" rel="tooltip" title="inactivo">
                            <i class="fa fa-power-off"></i></button>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>
