<div class="control-group condiciones_financieras">
    <table class="dashlet condiciones_financierasdashlet" style="border: solid lightblue;" cellspacing="1" cellpadding="5" width="100%">
        <tr>
            <td >
                <div class="record-label primeraCol">
                    Activo
                </div>
            </td>
            <td class="columnas">
                <select class="existingActivo" data-field="activo" placeholder="Activo" style="font-size: 15px;font-weight: 500;">
                    {{{idactivo}}}
                </select>
            </td>
            <td >
                <div class="record-label">
                    Plazo
                </div>
            </td>
            <td class="columnas">
                <select class="existingPlazo" data-field="plazo" placeholder="Plazo" style="font-size: 15px;font-weight: 500;">
                    {{{plazo}}}
                </select>
            </td>
            <td >
                <div class="record-label">
                    Tasa Minima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingTasaMinima{{index}} porcentaje" value="{{tasa_minima}}" data-max="existingTasaMaxima{{index}}" data-field="tasa_minima"/>
            </td>
            <td >
                <div class="record-label">
                    Tasa Maxima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingTasaMaxima{{index}} porcentaje" value="{{tasa_maxima}}" data-min="existingTasaMinima{{index}}" data-field="tasa_maxima"/>
            </td>
            <td></td>
        </tr>

        <tr>
            <td >
                <div class="record-label primeraCol">
                    VRC Minimo
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingVRCMinimo{{index}} porcentaje" value="{{vrc_minimo}}" data-max="existingVRCMaximo{{index}}" data-field="vrc_minimo"/>
            </td>
            <td >
                <div class="record-label">
                    VRC Maximo
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingVRCMaximo{{index}} porcentaje" value="{{vrc_maximo}}" data-min="existingVRCMinimo{{index}}" data-field="vrc_maximo"/>
            </td>
            <td >
                <div class="record-label">
                    VRI Minimo
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingVRIMinimo{{index}} porcentaje" value="{{vri_minimo}}" data-max="existingVRIMaximo{{index}}" data-field="vri_minimo"/>
            </td>
            <td >
                <div class="record-label">
                    VRI Maximo
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingVRIMaximo{{index}} porcentaje" value="{{vri_maximo}}" data-min="existingVRIMinimo{{index}}" data-field="vri_maximo"/>
            </td>
            <td></td>
        </tr>

        <tr>
            <td >
                <div class="record-label primeraCol">
                    Comision Minima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingComisionMinima{{index}} porcentaje" value="{{comision_minima}}" data-max="existingComisionMaxima{{index}}" data-field="comision_minima"/>
            </td>
            <td >
                <div class="record-label">
                    Comision Maxima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingComisionMaxima{{index}} porcentaje" value="{{comision_maxima}}" data-min="existingComisionMinima{{index}}" data-field="comision_maxima"/>
            </td>
            <td >
                <div class="record-label">
                    Renta Inicial Minima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingRentaInicialMinima{{index}} porcentaje" value="{{renta_inicial_minima}}" data-max="existingRentaInicialMaxima{{index}}" data-field="renta_inicial_minima"/>
            </td>
            <td >
                <div class="record-label">
                    Renta Inicial Maxima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="existingRentaInicialMaxima{{index}} porcentaje" value="{{renta_inicial_maxima}}" data-min="existingRentaInicialMinima{{index}}" data-field="renta_inicial_maxima"/>
            </td>
            <td></td>
        </tr>

        <tr>
            <td >
                <div class="record-label primeraCol">
                    Deposito en Garantia
                </div>
            </td>
            <td class="columnas">
                <input type="checkbox" class="existingDeposito checkboxUpdate" value="{{deposito_en_garantia}}" {{deposito_en_garantia_checked}} data-field="deposito_en_garantia"/>
            </td>
            <td >
                <div class="record-label">
                    Uso Particular
                </div>
            </td>
            <td class="columnas">
                <input type="checkbox" class="existingUsoParticular checkboxUpdate" value="{{uso_particular}}" {{uso_particular_checked}} data-field="uso_particular"/>
            </td>
            <td >
                <div class="record-label">
                    Uso Empresarial
                </div>
            </td>
            <td class="columnas">
                <input type="checkbox" class="existingUsoEmpresarial checkboxUpdate" value="{{uso_empresarial}}" {{uso_empresarial_checked}} data-field="uso_empresarial"/>
            </td>
            <td >
                <div class="record-label">
                    Activo Nuevo?
                </div>
            </td>
            <td class="columnas">
                <input type="checkbox" class="existingActivoNuevo checkboxUpdate" value="{{activo_nuevo}}" {{activo_nuevo_checked}} data-field="activo_nuevo"/>
            </td>
            <td width="12%">
                <div class="btn-toolbar prevent-mousedown">
                    <div class="btn-group prevent-mousedown">
                        <a href="javascript:void(0)" class="btn removeCondicionFinanciera" rel="tooltip" title="{{str "LBL_REMOVE"}}"><i class="fa fa-minus"></i></a>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>