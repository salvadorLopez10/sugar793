<style>
   .columnas{
       padding: 1%;
   }

    .primeraCol{
        padding-left: 10%;
    }
</style>

<div class="control-group condiciones_financieras">
    <table class="dashlet condiciones_financierasdashlet" style="border: solid lightblue;" cellspacing="1" cellpadding="5" width="100%">
        <tr>
            <td >
                <div class="record-label primeraCol">
                    Activo
                </div>
            </td>
            <td class="columnas">
                <select class="newActivo" data-field="Activo" placeholder="Activo" style="font-size: 15px;font-weight: 500;">
                    {{{activo_list_html}}}
                </select>
            </td>
            <td >
                <div class="record-label">
                    Plazo
                </div>
            </td>
            <td class="columnas">
                <select class="newPlazo" data-field="Plazo" placeholder="Plazo" style="font-size: 15px;font-weight: 500;" id="new_plazo">
                    {{{plazo_list_html}}}
                </select>
            </td>
            <td >
                <div class="record-label">
                    Tasa Minima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newTasaMinima porcentaje" value="{{tasa_minima}}" data-max="newTasaMaxima" id="new_tasa_minima"/>
            </td>
            <td >
                <div class="record-label">
                    Tasa Maxima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newTasaMaxima porcentaje" value="{{tasa_maxima}}" data-min="newTasaMinima" id="new_tasa_maxima"/>
            </td>
            <td></td>
        </tr>

        <tr>
            <td >
                <div class="record-label primeraCol">
                    VRC Minimo
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newVRCMinimo porcentaje" value="{{vrc_minimo}}" data-max="newVRCMaximo" id="new_vrc_minimo"/>
            </td>
            <td >
                <div class="record-label">
                    VRC Maximo
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newVRCMaximo porcentaje" value="{{vrc_maximo}}" data-min="newVRCMinimo" id="new_vrc_maximo"/>
            </td>
            <td >
                <div class="record-label">
                    VRI Minimo
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newVRIMinimo porcentaje" value="{{vri_minimo}}" data-max="newVRIMaximo" id="new_vri_minimo"/>
            </td>
            <td >
                <div class="record-label">
                    VRI Maximo
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newVRIMaximo porcentaje" value="{{vri_maximo}}" data-min="newVRIMinimo" id="new_vri_maximo"/>
            </td>
            <td></td>
        </tr>

        <tr>
            <td >
                <div class="record-label primeraCol">
                    Comision Minima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newComisionMinima porcentaje" value="{{comision_minima}}" data-max="newComisionMaxima" id="new_comision_minima"/>
            </td>
            <td >
                <div class="record-label">
                    Comision Maxima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newComisionMaxima porcentaje" value="{{comision_maxima}}" data-min="newComisionMinima" id="new_comision_maxima"/>
            </td>
            <td >
                <div class="record-label">
                    Renta Inicial Minima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newRentaInicialMinima porcentaje" value="{{renta_inicial_minima}}" data-max="newRentaInicialMaxima" id="new_renta_inicial_minima"/>
            </td>
            <td >
                <div class="record-label">
                    Renta Inicial Maxima
                </div>
            </td>
            <td class="columnas">
                <input type="text" class="newRentaInicialMaxima porcentaje" value="{{renta_inicial_maxima}}" data-min="newRentaInicialMinima" id="new_renta_inicial_maxima"/>
            </td>
            <td></td>
        </tr>

        <tr>
            <td >
                <div class="record-label primeraCol">
                    Deposito en Garantia
                </div>
            </td>
            <td class="columnas">
                <input type="checkbox" class="newDeposito" value="{{deposito_en_garantia}}" id="new_deposito_en_garantia"/>
            </td>
            <td >
                <div class="record-label">
                    Uso Particular
                </div>
            </td>
            <td class="columnas">
                <input type="checkbox" class="newUsoParticular" value="{{uso_particular}}"/>
            </td>
            <td >
                <div class="record-label">
                    Uso Empresarial
                </div>
            </td>
            <td class="columnas">
                <input type="checkbox" class="newUsoEmpresarial" value="{{uso_empresarial}}"/>
            </td>
            <td >
                <div class="record-label">
                    Activo Nuevo?
                </div>
            </td>
            <td class="columnas">
                <input type="checkbox" class="newActivoNuevo" value="{{activo_nuevo}}"/>
            </td>
            <td width="10%">
                <div class="btn-toolbar prevent-mousedown">
                    <div class="btn-group">
                        <a href="javascript:void(0)" class="btn addCondicionFinanciera" rel="tooltip" title="Add Condicion Financiera"><i class="icon-ok"></i></a>
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>